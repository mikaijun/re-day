scalar DateTime

type Task {
  id: ID!
  text: String!
  done: Boolean!
  user: User!
  created_at: DateTime!
  updated_at: DateTime!
}

type User {
  id: ID!
  name: String!
  tasks: [Task!]!
  created_at: DateTime!
  updated_at: DateTime!
}

type Query {
  tasks: [Task!]!
  users: [User!]!
}

input NewTask {
  text: String!
  userId: String!
}

input NewUser {
  name: String!
}

type Mutation {
  createTask(input: NewTask!): Task!
  createUser(input: NewUser!): User!
}
